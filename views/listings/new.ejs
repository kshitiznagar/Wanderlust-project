
<body>
    <h3>Add new Hotel</h3>
    <form action="/listing/new" method="post">
        <input type="text" name="listing[title]" placeholder="Enter title">
        <br><br>
        <textarea name="listing[description]" placeholder="Add description"></textarea>
        <br><br>
        <input type="text" name="listing[image]" placeholder="Enter URL of your image">
        <br><br>
        <input type="number" name="listing[price]" placeholder="Enter price">
        <br><br>
        <input type="text" name="listing[location]" placeholder="Enter location">
        <br><br>
        <input type="text" name="listing[country]" placeholder="Enter country">
        <br><br>
        <button>Add</button>
    </form>
</body>
