<% layout("/layouts/boilerplate")%>

    <body>
        <div class="row">
            <div class="col-8 offset-3 index-heading">
                <br>
                <h1>
                    <%=listing.title%>
                </h1>
            </div>
            <div class="card col-6 offset-3 show-card">
                <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="hotel image">
                <div class="card-body">
                    <p class="card-text">Owned by :- <i>
                            <%=listing.owner.username%>
                        </i></p>
                    <p class="card-text">
                        <%=listing.description%>
                    </p>
                    <p class="card-text">&#8377; <%=listing.price.toLocaleString("en-IN")%>/night </p>
                    <p class="card-text">
                        <%=listing.location%>
                    </p>
                    <p class="card-text">
                        <%=listing.country%>
                    </p>
                </div>
            </div>
            <% if(currUser && currUser._id.equals(listing.owner._id)){ %>
                <div class="col-8 offset-3 btns">
                    <form>
                        <button class="btn btn-dark mt-3 edit-btn"><a
                                href="/listing/<%=listing._id%>/edit">Edit</a></button>
                    </form>
                    <form method="post" action="/listing/<%=listing._id%>/delete?_method=delete">
                        <button class="btn btn-dark mt-3 offset-2 delete-btn">Delete</button>
                    </form>
                </div>
                <% } %>
        </div>
        <hr>
        <div class="col-6 offset-3">
            <% if(currUser){ %>
                <h4>Leave a review</h4>
                <form action="/listing/<%=listing._id%>/reviews" class="mb-3 needs-validation" method="post" novalidate>
                    <!-- <div class="mb-3 mt-3">
                        <input type="range" name="Review[rating]" min="1" max="5" id="rating" class="form-range"
                            required>
                    </div> -->
                    <div class="mt-3">
                        <label for="rating" class="form-label">Rating</label>
                        <fieldset class="starability-slot">
                            <input type="radio" id="no-rate" class="input-no-rate" name="Review[rating]" value="1"
                                checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="Review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="Review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="Review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="Review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="Review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    <div class="mb-3">
                        <label for="comment" class="form-label">Comments</label>
                        <textarea name="Review[comment]" id="comment" rows="3" cols="20" class="form-control"
                            required></textarea>
                        <div class="invalid-feedback">Please write your thoughts about place</div>
                    </div>
                    <button class="btn btn-outline-dark">Submit</button>
                </form>
                <% } %>
                    <hr>
                    <p>All reviews</p>
                    <div class="row">
                        <% for(review of listing.reviews) { %>
                            <div class="card col-5 me-3 mb-3">
                                <div class="card-body mt-2">
                                    <h5 class="card-title">@<%=review.author.username%>
                                    </h5>
                                    <p class="card-text review-date"><%=review.createdAt.toLocaleString("en-IN")%></p>
                                    <p class="card-text">
                                        <%=review.comment%>
                                    </p>
                                    <p class="starability-result card-text comment-stars" data-rating="<%=review.rating%>">
                                        Rated:<%=review.rating%> Stars
                                    </p>
                                    <form action="/listing/<%=listing._id%>/reviews/<%=review._id%>?_method=delete"
                                        class="mb-2" method="post">
                                        <button class="btn btn-sm btn-dark">Delete</button>
                                    </form>
                                </div>
                            </div>
                            <% } %>
                    </div>
        </div>

    </body>